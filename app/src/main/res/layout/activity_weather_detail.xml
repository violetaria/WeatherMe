<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_weather_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.getlosthere.weatherme.activities.WeatherDetailActivity">

    <TextView
        tools:text="Today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
        android:id="@+id/tvWeekday"/>
    <TextView
        tools:text="June 25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/tvWeekday"
        android:layout_alignLeft="@+id/tvWeekday" android:layout_alignStart="@+id/tvWeekday"
        android:id="@+id/tvDate"/>
    <TextView
        tools:text="21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/tvDate"
        android:layout_alignLeft="@+id/tvDate" android:layout_alignStart="@+id/tvDate"
        android:layout_marginTop="26dp" android:id="@+id/tvMaxTemp"/>
    <TextView
        tools:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/tvMaxTemp"
        android:layout_alignRight="@+id/tvMaxTemp" android:layout_alignEnd="@+id/tvMaxTemp"
        android:layout_marginTop="19dp" android:id="@+id/tvMinTemp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/art_clear"
        android:layout_alignParentTop="true" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" android:id="@+id/ivWeatherImage"/>
    <TextView
        tools:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/ivWeatherImage"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp" android:layout_marginEnd="41dp"
        android:layout_marginTop="17dp" android:id="@+id/tvWeatherText"/>
    <TextView
        android:text="@string/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/tvWeatherText"
        android:layout_alignLeft="@+id/tvMinTemp" android:layout_alignStart="@+id/tvMinTemp"
        android:layout_marginTop="89dp" android:id="@+id/tvHumidityLabel"/>
    <TextView
        android:text="@string/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_below="@+id/tvHumidityLabel"
        android:layout_alignLeft="@+id/tvHumidityLabel" android:layout_alignStart="@+id/tvHumidityLabel"
        android:layout_marginTop="20dp" android:id="@+id/tvWindLabel"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWindLabel"
        android:layout_alignLeft="@+id/tvWindLabel"
        android:layout_alignStart="@+id/tvWindLabel"
        android:layout_marginTop="21dp"
        android:id="@+id/tvPressureLabel"
        android:text="@string/pressure"/>
    <TextView
        tools:text="84%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignTop="@+id/tvHumidityLabel"
        android:layout_toRightOf="@+id/tvHumidityLabel" android:layout_toEndOf="@+id/tvHumidityLabel"
        android:layout_marginLeft="21dp" android:layout_marginStart="21dp"
        android:id="@+id/tvHumidity"/>
    <TextView
        tools:text="6 km/H NW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_above="@+id/tvPressureLabel"
        android:layout_alignLeft="@+id/tvHumidity" android:layout_alignStart="@+id/tvHumidity"
        android:id="@+id/tvWind"/>
    <TextView
        tools:text="1014 hPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignTop="@+id/tvPressureLabel"
        android:layout_alignRight="@+id/tvWind" android:layout_alignEnd="@+id/tvWind"
        android:id="@+id/tvPressure"/>
</RelativeLayout>
