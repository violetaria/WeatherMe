<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.getlosthere.weatherme.fragments.CurrentWeatherFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/art_clear"
        android:id="@+id/ivCurrentImage"
        android:layout_alignParentTop="true" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentText"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" android:layout_below="@+id/ivCurrentImage"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"/>
    <TextView
        tools:text="Today, June 24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentDate"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" android:layout_marginTop="26dp"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentLowTemp" android:layout_alignBottom="@+id/ivCurrentImage"
        android:layout_alignLeft="@+id/tvCurrentHighTemp"
        android:layout_alignStart="@+id/tvCurrentHighTemp" android:layout_marginBottom="21dp"/>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="29dp" android:layout_marginEnd="29dp"
        android:id="@+id/tvCurrentHighTemp" android:layout_above="@+id/tvCurrentLowTemp"
        android:layout_alignRight="@+id/tvCurrentDate" android:layout_alignEnd="@+id/tvCurrentDate"
        android:layout_marginBottom="16dp"/>

</RelativeLayout>
