<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rlCurrentWeather"
                android:clickable="true"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.getlosthere.weatherme.fragments.CurrentWeatherFragment"
                android:background="@color/colorHeader">

    <TextView
        tools:text="Today, June 24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentDate"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp" android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary"/>
    <TextView
        tools:text="20°"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentHighTemp"
        android:textColor="@color/textColorPrimary"
        android:textSize="55sp"
        android:layout_below="@+id/tvCurrentDate" android:layout_alignLeft="@+id/tvCurrentDate"
        android:layout_alignStart="@+id/tvCurrentDate" android:layout_marginTop="20dp"/>
    <TextView
        tools:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentText"
        android:textColor="@color/textColorPrimary"
        android:textSize="24sp" android:layout_below="@+id/ivCurrentImage"
        android:layout_alignLeft="@+id/ivCurrentImage"
        android:layout_alignStart="@+id/ivCurrentImage" android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"/>
    <TextView
        tools:text="8°"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentLowTemp"
        android:textColor="@color/textColorPrimary" android:textSize="24sp"
        android:layout_below="@+id/tvCurrentHighTemp"
        android:layout_alignLeft="@+id/tvCurrentHighTemp"
        android:layout_alignStart="@+id/tvCurrentHighTemp" android:layout_marginTop="20dp"
        android:paddingLeft="15dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:srcCompat="@drawable/art_clear"
        android:id="@+id/ivCurrentImage"
        android:layout_alignParentTop="true" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
